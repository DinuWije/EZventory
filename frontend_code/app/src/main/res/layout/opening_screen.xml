<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:background="@color/background"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<TextView
		android:id="@+id/inventoryManager"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="30dp"
		android:text="EZventory"
		android:textSize="35sp"
		android:textColor="@color/colorPrimary"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<Button
		android:id="@+id/login"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		android:layout_marginBottom="30sp"
		android:layout_marginStart="10sp"
		android:layout_marginEnd="10sp"
		android:text="Log-in"
		android:textColor="@color/text"
		android:backgroundTint="@color/colorPrimary" />

	<Button
		android:id="@+id/register"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constraintBottom_toTopOf="@id/login"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		android:layout_marginBottom="5sp"
		android:layout_marginStart="10sp"
		android:layout_marginEnd="10sp"
		android:text="Register"
		android:textColor="@color/text"
		android:backgroundTint="@color/colorPrimary" />


	<ImageView
		android:id="@+id/imageDisplay"
		android:layout_width="match_parent"
		android:layout_height="400sp"
		app:srcCompat="@mipmap/ic_launcher_round"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@id/loginPrompt"
		app:layout_constraintBottom_toTopOf="@id/register"
		android:layout_marginTop="15sp"
		android:layout_marginBottom="15sp"/>

	<TextView
		android:id="@+id/loginPrompt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toBottomOf="@id/inventoryManager"
		app:layout_constraintEnd_toEndOf="parent"
		android:textColor="@color/colorAccent"
		app:layout_constraintStart_toStartOf="parent"
		android:layout_marginTop="10sp"
		android:textSize="20sp"
		android:text="Please log-in or register to continue" />


</androidx.constraintlayout.widget.ConstraintLayout>
