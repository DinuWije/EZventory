<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:background="@color/background"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<TextView
		android:id="@+id/optionsName"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="30dp"
		android:text="Options"
		android:textSize="35sp"
		android:textColor="@color/colorPrimary"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<Button
		android:id="@+id/logout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toBottomOf="@id/optionsName"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		android:layout_marginTop="10sp"
		android:layout_marginStart="10sp"
		android:layout_marginEnd="10sp"
		android:text="Logout"
		android:textColor="@color/text"
		android:backgroundTint="@color/colorPrimary" />

	<Button
		android:id="@+id/exportData"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toBottomOf="@id/logout"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		android:layout_marginTop="5sp"
		android:layout_marginStart="10sp"
		android:layout_marginEnd="10sp"
		android:text="Export Inventory to Spreadsheet"
		android:textColor="@color/text"
		android:backgroundTint="@color/colorPrimary" />

	<TextView
		android:id="@+id/optionsText"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text=""
		android:textColor="@color/colorAccent"
		android:textSize="20sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintBottom_toTopOf="@id/backButton2"
		android:layout_marginBottom="10dp"/>

	<Button
		android:id="@+id/backButton2"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		android:layout_marginBottom="15sp"
		android:layout_marginStart="10sp"
		android:layout_marginEnd="10sp"
		android:text="Back"
		android:textColor="@color/text"
		android:backgroundTint="@color/colorPrimary" />


</androidx.constraintlayout.widget.ConstraintLayout>
